{% extends 'base.html.twig' %}

{% block title %}Admin tous Realisateurs{% endblock %}

{% block body %}

    <div class="container my-5">

        <h3>Ajouter un réalisateur <a href="{{ path('app_ajouter_realisateur') }}" ><i class="bi bi-plus-square-fill"></i></a></h3>       

        {% if realisateurs %}
        <h2>Liste des réalisateurs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Nom</th>
                    <th scope="col">E</th>
                    <th scope="col">X</th>
                </tr>
            </thead>
            <tbody>                
                {% for realisateur in realisateurs %}
                <tr>                    
                    <td>{{ realisateur.id }}</td>
                    <td>{{ realisateur.nom }}</td>                    
                    <td><a href="{{ path('app_modifier_realisateur', {id: realisateur.id}) }}" ><i class="bi bi-pen"></i></a></td>
                    <td><a href="{{ path('app_supprimer_realisateur', {id: realisateur.id}) }}" ><i class="bi bi-trash"></i></a></td>
                </tr>
                {% endfor %}                
            </tbody>
        </table>
        {% endif %}

    </div>

{% endblock %}
